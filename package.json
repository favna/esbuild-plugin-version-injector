{
  "name": "esbuild-plugin-version-injector",
  "version": "1.0.0",
  "description": "An esbuild plugin to inject your application's version number or today's date into your files",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "author": "Favware",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src tests --ext ts --fix",
    "format": "prettier --write {src,tests}/**/*.ts",
    "test": "vitest run",
    "test:clean": "node scripts/clean-test-output.mjs",
    "build": "tsup",
    "bump": "cliff-jumper && yarn test -u",
    "check-update": "cliff-jumper --dry-run",
    "postinstall": "husky install .github/husky",
    "prepack": "yarn build && pinst --disable",
    "postpack": "pinst --enable"
  },
  "dependencies": {
    "@sapphire/result": "^2.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@favware/cliff-jumper": "1.8.8",
    "@sapphire/eslint-config": "^4.3.8",
    "@sapphire/prettier-config": "^1.4.4",
    "@sapphire/ts-config": "^3.3.4",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitest/coverage-c8": "^0.24.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4",
    "vitest": "^0.24.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/esbuild-plugin-version-injector.git"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=v14.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "esbuild",
    "esbuild plugin",
    "esbuild-plugin"
  ],
  "bugs": {
    "url": "https://github.com/favware/esbuild-plugin-version-injector/issues"
  },
  "homepage": "https://github.com/favware/esbuild-plugin-version-injector#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "minimist": "^1.2.7"
  },
  "eslintConfig": {
    "extends": "@sapphire"
  },
  "packageManager": "yarn@3.2.4"
}
